extends template/layout

block content
    
    //- Menu bar
    - var current = "Login"
    include template/nav

    div(class="login")
        h1 Login
        form(action="/login" method="POST")
            p Username
            input#username(type="text" name="username")
            p Password
            input#password(type="password" name="password")
            input(type="submit" value="login")

