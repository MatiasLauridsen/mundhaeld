extends template/layout

block content
    
    //- Menu bar
    - var current = "Admin"
    include template/nav
    
    div(class="admin")
        h2 Opret produkt
        form#form(action="/admin" method='POST')
            div(class="form")
                input#name(type='text' name="name" required)
                label(class="label_navn")
                    span(class="input_navn") Produkt navn
            div(class="form")
                input#alcoholP(type='number' name='alcoholP' step="any" required)
                label(class="label_navn")
                    span(class="input_navn") Alkohol %

            div(class="form")
                input#price(type='text' name='price' required)
                label(class="label_navn")
                        span(class="input_navn") Pris
            br
            div.deciptionWrapper
                textarea#desciption(placeholder="Beskrivelse" type='text' name='desciption' cols="30", rows="5" required)
            //- span Beskrivelse
            br
            input(type='Submit' value='Opret')

